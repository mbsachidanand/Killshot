{
  "name": "expense-manager-backend",
  "version": "1.0.0",
  "description": "Backend API for Expense Manager expense splitting app",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "db:reset": "node src/database/reset.js",
    "setup": "node setup-env.js",
    "setup:db": "npm run setup && npm run db:migrate && npm run db:seed",
    "env:dev": "node scripts/setup-env.js development",
    "env:staging": "node scripts/setup-env.js staging",
    "env:prod": "node scripts/setup-env.js production",
    "env:show": "node scripts/setup-env.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "keywords": ["expense", "splitting", "api", "backend"],
  "author": "Sachidanand M B",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
