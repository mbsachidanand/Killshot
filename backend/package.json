{
  "name": "expense-manager-backend",
  "version": "1.0.0",
  "description": "Backend API for Expense Manager expense splitting app",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "start:dev": "ts-node -r tsconfig-paths/register src/server.ts",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register src/server.ts\"",
    "dev:watch": "nodemon --exec \"ts-node -r tsconfig-paths/register src/server.ts\" --watch src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "ts-node -r tsconfig-paths/register src/database/migrate.ts",
    "db:seed": "ts-node -r tsconfig-paths/register src/database/seed.ts",
    "db:reset": "ts-node -r tsconfig-paths/register src/database/reset.ts",
    "setup": "ts-node -r tsconfig-paths/register setup-env.ts",
    "setup:db": "npm run setup && npm run db:migrate && npm run db:seed",
    "env:dev": "ts-node scripts/setup-env.ts development",
    "env:staging": "ts-node scripts/setup-env.ts staging",
    "env:prod": "ts-node scripts/setup-env.ts production",
    "env:show": "ts-node scripts/setup-env.ts",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build"
  },
  "keywords": [
    "expense",
    "splitting",
    "api",
    "backend"
  ],
  "author": "Sachidanand M B",
  "license": "MIT",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
