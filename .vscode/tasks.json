    },
    {
      "label": "Setup: Install SwiftLint",
      "type": "shell",
      "command": "./setup-swiftlint.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Project: Format All Code",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Backend: Format Code",
        "iOS: Run SwiftFormat"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Project: Lint All Code",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Backend: Lint Code",
        "iOS: Run SwiftLint"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
