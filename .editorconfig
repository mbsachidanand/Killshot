# EditorConfig is awesome: https://EditorConfig.org
# This file ensures consistent coding styles across different editors and IDEs

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript files (Backend)
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Swift files (iOS Frontend)
[*.swift]
indent_style = space
indent_size = 4
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# SQL files (Database migrations)
[*.sql]
indent_style = space
indent_size = 2
max_line_length = 100

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2

# Xcode project files
[*.pbxproj]
indent_style = tab
indent_size = 4

# Git files
[.gitignore]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
indent_size = 4

# XML files
[*.{xml,plist}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2
max_line_length = 120

# CSS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 2
max_line_length = 120

# Python files (if any)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Ruby files (if any)
[*.rb]
indent_style = space
indent_size = 2
max_line_length = 100

# Go files (if any)
[*.go]
indent_style = tab
indent_size = 4
max_line_length = 100

# Rust files (if any)
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# C/C++ files (if any)
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4
max_line_length = 100

# Java files (if any)
[*.java]
indent_style = space
indent_size = 4
max_line_length = 100

# Kotlin files (if any)
[*.kt]
indent_style = space
indent_size = 4
max_line_length = 100

# PHP files (if any)
[*.php]
indent_style = space
indent_size = 4
max_line_length = 100

# R files (if any)
[*.r]
indent_style = space
indent_size = 2
max_line_length = 100

# MATLAB files (if any)
[*.m]
indent_style = space
indent_size = 4
max_line_length = 100

# LaTeX files (if any)
[*.{tex,latex}]
indent_style = space
indent_size = 2
max_line_length = 100

# R Markdown files (if any)
[*.{rmd,Rmd}]
indent_style = space
indent_size = 2
max_line_length = 100

# Jupyter Notebook files (if any)
[*.ipynb]
indent_style = space
indent_size = 2
max_line_length = 100

# Log files
[*.log]
insert_final_newline = false
trim_trailing_whitespace = false

# Binary files
[*.{png,jpg,jpeg,gif,ico,svg,pdf,zip,tar,gz}]
insert_final_newline = false
trim_trailing_whitespace = false
